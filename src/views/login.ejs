  <!-- script references -->
<script>
let email=document.getElementById("email");
let text=document.getElementById("text");
let password=document.getElementById("password");
let pass=document.getElementById("pass");
function validate(){
let exp =  /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
if(exp.test(email.value)){
   text.style.color="green";
   text.innerHTML="Email is valid";
  }
else{
    text.innerHTML = "Please enter an valid email";
    text.style.color = "red";
    return false;   
}
 let regexp =  /(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}/;
 if(regexp.test(password.value)){
    pass.style.color="green";
    pass.innerHTML="Password is valid"
     return true;
 }
 else{
   pass.innerHTML = "Password should contain atleast 8 letters including one number,one lowercase,uppercase lettters";
   pass.style.color = "red";
   return false;  
  }}
    </script>
