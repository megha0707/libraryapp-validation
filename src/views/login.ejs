          <div class="wrapper">
            <h1>Login</h1>
            <form method="POST"  action="/login/add" onsubmit="return validate()">
                <input type="text" placeholder="Email" id="email" name="email" style="color:black;" >
                <br>
                <span id="text"></span>
                <input type="password" placeholder="Password" id="password" name="password">
                <br>
                <span id="pass"></span>
